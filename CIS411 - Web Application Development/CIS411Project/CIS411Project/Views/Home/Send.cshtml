@model CIS411Project.Models.Message

@{
    ViewData["Title"] = "Send";
}

<h1>Send Message</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Send">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Receiver</label>
                <input asp-for="MessageReceiver" class="form-control" />
                <span asp-validation-for="MessageReceiver" class="text-danger"></span>
            </div>

            <p></p>
            <div class="form-group">
                <label>Message</label>
                <input asp-for="MessageContent" class="form-control" />
                <span asp-validation-for="MessageContent" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Messages">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
